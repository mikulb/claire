<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>


		<!--==================================================== Reports ====================================================-->
		<!-- Create parameter view layout : -->
		<record id="daily_reporting_form" model="ir.ui.view">
			<field name="name">Print Daily Report</field>
			<field name="model">daily.reporting</field>
			<field name="arch" type="xml">
				<form string="Daily Report" version="7.0">
					<group>
						<field name="date" style="width: 50%"/>
					</group>
					<group>
						<field name="output_type"/> 
						<button name="print_report" string="_Print Report" type="object" class="oe_highlight" />
					</group>
				</form>
			</field>
		</record>

		<!-- Create parameter view layout : -->
		<record id="summary_result_form" model="ir.ui.view">
			<field name="name">Print Summary of Results</field>
			<field name="model">summary.result</field>
			<field name="arch" type="xml">
				<form string="Summary of Results" version="7.0">
					<group>
						<field name="year" style="width: 25%" required="True"/>
					</group>
					<group>
						<field name="output_type"/> 
						<button name="print_report" string="_Print Report" type="object" class="oe_highlight" />
					</group>
				</form>
			</field>
		</record>

		<!-- Create parameter view layout : -->
		<record id="summary_result_v2_form" model="ir.ui.view">
			<field name="name">Print Summary of Results</field>
			<field name="model">summary.result.v2</field>
			<field name="arch" type="xml">
				<form string="Summary of Results v2" version="7.0">
					<group>
						<field name="year" style="width: 25%" required="True"/>
					</group>
					<group>
						<field name="output_type"/> 
						<button name="print_report" string="_Print Report" type="object" class="oe_highlight" />
					</group>
				</form>
			</field>
		</record>
		<!--==================================================== Reports =====================================================-->
		<record id="action_daily_reporting" model="ir.actions.act_window">
			<field name="name">Reports</field>
			<field name="res_model">daily.reporting</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_summary_of_results" model="ir.actions.act_window">
			<field name="name">Reports</field>
			<field name="res_model">summary.result</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_summary_of_results_v2" model="ir.actions.act_window">
			<field name="name">Reports</field>
			<field name="res_model">summary.result.v2</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>


		<menuitem id="report_menu" 
			parent="claire_ph.main_lotto_menu"
			name="Reports" 
			groups="claire_ph.group_admin,claire_ph.group_user"
			sequence="3"/> 

		<menuitem id="daily_reporting_menu" 
			parent="report_menu"
			name="Daily Report" 
			action="action_daily_reporting" 
			groups="claire_ph.group_admin,claire_ph.group_user"
			sequence="1"/> 
		
		<menuitem id="summary_result_menu" 
			parent="report_menu"
			name="Summary of Results" 
			action="action_summary_of_results" 
			groups="claire_ph.group_admin,claire_ph.group_user"
			sequence="2"/> 

		<menuitem id="summary_result_v2_menu" 
			parent="report_menu"
			name="Summary of Results v2" 
			action="action_summary_of_results_v2" 
			groups="claire_ph.group_admin,claire_ph.group_user"
			sequence="3"/> 

	</data>
</openerp>